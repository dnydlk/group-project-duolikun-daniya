<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/expense_item_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/baseline_money_off_24" />

    <TextView
        android:id="@+id/expense_item_who_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/expense_item_image_view"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="Who" />

    <TextView
        android:id="@+id/expense_item_how_much_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/expense_item_image_view"
        android:gravity="center"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="How Much" />

    <TextView
        android:id="@+id/expense_item_what_text_view"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/expense_item_image_view"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="What" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/expense_item_image_view"
        android:layout_marginTop="10dp"
        android:background="@color/purple" />


</RelativeLayout>